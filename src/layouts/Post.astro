---
import { type CollectionEntry, render } from "astro:content";

const post = Astro.props;

type Props = CollectionEntry<"posts">;
const { Content } = await render(post);
---

<div class="bg-gray w-full">
    <div class="flex flex-col justify-center text-justify p-42">
        <h4 class="font-noto text-4xl text-pearl text-center pb-21 max-w-[66%] place-self-center">
            {post.data.title}
        </h4>
        <div class="font-barlow text-xl text-pearl">
            <Content />
        </div>
    </div>
</div>
