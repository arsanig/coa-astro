---
import * as m from "@paraglide/messages.js";
// import Socials from "@components/Socials.astro";
---

<div class="flex flex-col min-h-100 bg-black px-4 sm:px-8 lg:px-21 py-8 sm:py-12 lg:py-16 gap-8 sm:gap-12">
    <div class="flex flex-col gap-2 sm:gap-4">
        <span class="font-noto text-pearl text-2xl sm:text-3xl lg:text-4xl">{m.siteName()}</span>
        <span class="font-barlow text-jonquil text-lg sm:text-xl lg:text-2xl">{m.slogan()}</span>
    </div>
    <div class="flex flex-col gap-4 sm:gap-6">
        <p class="text-pearl text-xs sm:text-sm font-barlow w-full sm:w-2/3 lg:w-1/3">
            {m.joint_message_one()}
            <a
                href="https://www.stgeorgestjoseph.ca/"
                target="_blank"
                class="text-pearl hover:underline hover:underline-offset-2"
            >
                {m.sgsj()}
            </a>
            {m.joint_message_two()}
            <a href="https://orthodoxy.ca" target="_blank" class="text-pearl hover:underline hover:underline-offset-2">
                {m.sgsa()}
            </a>
            {m.joint_message_three()}
        </p>
        <hr class="text-pearl w-full sm:w-2/3 lg:w-1/3" />
        <span class="text-pearl text-xs sm:text-sm font-barlow">
            {m.copyright()}
        </span>
        <!-- <Socials /> -->
    </div>
</div>
