<NavLink text={m.diveLabel()} route={localizePathname("/deep-dive", languageTag())} />
<NavLink text={m.podcastsLabel()} route={localizePathname("/podcasts", languageTag())} />
<NavLink text={m.shortsLabel()} route={localizePathname("/shorts", languageTag())} />
